{
    "job": {
        "setting": {
            "speed": {
                "channel":{job.channel}
            },
            "errorLimit": {
                "record": 0,
                "percentage": 0.02
            }
        },
        "content": [
            {
                "reader": {
                    "name": "{source.db.type}reader",
                    "parameter": {
                        "username":"{source.db.username}",
                        "password":"{source.db.password}",
                        "splitPk": "{source.db.table.pk}",
                        "connection": [
                            {
                                "table": [
                                    "{source.db.table.name}"
                                ],
                                "jdbcUrl": [
                                    "{source.db.url}"
                                ]
                            }
                        ]
                    }
                },
                "writer": {
                    "name": "{target.db.type}writer",
                    "parameter": {
                        "username":"{target.db.username}",
                        "password":"{target.db.password}",
                        "writeMode":"insert",
                        "preSql": [
                            "delete from XXX;"
                        ],
                        "connection": [
                            {
                                "jdbcUrl": "{target.db.url}",
                                "table": [
                                    "{target.db.table.name}"
                                ]
                            }
                        ],
                        "postSql": [
                            "delete from XXX;"
                        ]
                    }
                }
            }
        ]
    }
}
